<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Buyer App API Automation Test Suite" preserve-order="true">

    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <parameter name="env" value="default"/>

    <test name="Buyer App Login Tests" preserve-order="true">
        <classes>
            <class name="com.automation.tests.buyerapp.BuyerLoginApiTest"/>
        </classes>
    </test>

    <test name="Buyer App HomePage Tests" preserve-order="true">
        <classes>
            <class name="com.automation.tests.buyerapp.HomePageApiTest"/>
        </classes>
    </test>

    <test name="Buyer App Collections Tests" preserve-order="true">
        <classes>
            <class name="com.automation.tests.buyerapp.CollectionsApiTest"/>
        </classes>
    </test>

    <test name="Buyer App Profile &amp; Config Tests" preserve-order="true">
        <classes>
            <class name="com.automation.tests.buyerapp.ProfileAndConfigApiTest"/>
        </classes>
    </test>

    <test name="Buyer App Search Tests" preserve-order="true">
        <classes>
            <class name="com.automation.tests.buyerapp.SearchApiTest"/>
        </classes>
    </test>

</suite>
